{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/"
    }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    }
    // No need to define specific routes for backend/app.py here.
    // Vercel's @vercel/python builder will automatically expose
    // the routes defined within app.py (e.g., /embed, /extract, /capture)
    // relative to the "src" path (backend/app.py becomes /api/).
  ],
  "outputDirectory": "frontend/dist"
}
